<%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="/css/work-history.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %> 

    <main>
        <% for (let session of staff.sessions) { %>
            <div class="card">
                <ul class="history">
                    <li class="history_items">Ngày: <%= session.date %></li>
                    <li class="history_items">Nơi làm việc: <%= session.workplace %> </li>
                    <li class="history_items">Giờ nghỉ đã đăng ký: <% for (let annualLeave of staff.annualLeave) { %>
                        <p>Ngày: <%= annualLeave.annualLeaveDate %></p>
                        <p>Số giờ nghỉ: <%= annualLeave.annualLeaveHour %></p>
                    <% } %> </li>
                    <li class="history_items">Giờ bắt đầu làm: <%= session.startTime %></li>
                    <% if (session.stopTime) { %>
                        <li>Giờ kết thúc làm: Chưa kết thúc</li>
                    <% } else { %>
                        <li class="history_items">Giờ kết thúc làm: <%= session.stopTime %></li>
                        <li class="history_items">Tổng số giờ làm ca này: 
                            <% if (session.stopTime == '') { %>
                                Chưa kết thúc                       
                            <% } else { %>
                                <%= session.timeWorked %> giờ
                            <% } %>
                        </li>
                        <li class="history_items">Tổng số giờ làm hôm nay: <%= session.timeWorked %> (Số giờ làm thêm: <%= session.overTime %>) </li>
                    <% } %>
                </ul>
            </div>
        <% } %>
        <div class="card">
            <ul class="salary">
                <li class="salary_items">Hệ số lương: <%= staff.salaryScale %> </li>
                <li class="salary_items">Số giờ làm thêm: <%= staff.overTime %></li>
                <li class="salary_items">Số giờ làm thiếu: <%= staff.timeShort %></li>
                <li class="salary_items">Lương: <%= (staff.salaryScale*3000000+(staff.overTime - staff.timeShort)*200000) %></li>
            </ul>
        </div>
    </main>
    <%- include('../includes/end.ejs') %> 